$.fn.datepicker.defaults.format = "yyyy-mm-dd";

$(function() {
  $(document).on('change','#event_repeat_type',function() {
    $('.event_option').hide();
    switch (this.value) {
      case 'daily':
            $('#repeats_daily_options').css('display','block');
            break;
      case 'weekly':
            break;
    }
  });
});