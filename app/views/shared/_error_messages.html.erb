<% if object.errors.any? %>
    <div id='error_explanation' class="alert alert-danger">
      <h1>The form contains <%= pluralize(object.errors.count, 'error') %></h1>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>