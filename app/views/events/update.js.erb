<% if @event.errors.any? %>
  $('#ajax_body').html("<%= j (render 'events/form', show_form_buttons: true, show_delete_link: true) %>");
<% else %>
  $(".event<%= @event.id %>").remove();
  <% if @event.in_current_month? %>
    <% @event_instances.each do |event_instance| %>
      $("#<%= formatted_date(event_instance.start_date) %>").append("<%= j (render event_instance) %>");
    <% end %>
  <% end %>
  $('#myModal').modal('hide');
<% end %>