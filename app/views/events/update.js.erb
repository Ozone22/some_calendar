<% if @event.errors.any? %>
  $('#ajax_body').html("<%= j (render 'events/form', show_form_buttons: true, show_delete_link: true) %>");
<% else %>
  $(".event<%= @event.id %>").remove();
  <%= render 'month_events', event: @event, event_instances: @event_instances %>
  $('#myModal').modal('hide');
<% end %>