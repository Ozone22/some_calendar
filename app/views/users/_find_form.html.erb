<%= form_tag users_path, method: 'get', remote: true do %>

    <div class="row">
      <div class="form-group">
        <div class="col-md-10">
          <%= text_field_tag :search, params[:search], class: 'form-control',
                             placeholder: 'Find user by email' %>
        </div>
        <div class="col-md-2">
          <%= submit_tag 'Search',  name: nil, class: 'btn btn-info' %>
        </div>
      </div>
    </div>

<% end %>

<div class="users_select">
  <%= form_tag events_path, method: 'get' do %>

    <div class="row">
      <div class="form-group">
        <div class="col-md-10">
          <%= select_tag 'users', options_from_collection_for_select(@users, 'id', 'email'), class: 'form-control' %>
          <p class="description_span">Please select user, system will show free days between you and this user</p>
        </div>
        <div class="col-md-2">
          <%= submit_tag 'Show',  name: nil, class: 'btn btn-success' %>
        </div>
      </div>
    </div>

  <% end %>
</div>